.panel.panel-default
	.panel-heading.text-center 
		= @problem.total_name
	%table.table.table-striped
		%tbody
			%tr
				%th Time
				%td= @problem.time
			%tr
				%th Space
				%td= @problem.space
			%tr
				%th AC
				%td= @problem_detail.ac
			%tr
				%th Submit
				%td= @problem_detail.submit
			%tr
				%th Difficulty
				%td= @problem.difficulty
			%tr
				%th Last Person
				%td= @problem_detail.last_person
.cards
	.btn-toolbar
		.btn-group-vertical
			= link_to problem_path(@problem), class: "btn btn-primary" do
				%span.card-content Show
			= link_to rand_problem_path(@problem), class: "btn btn-primary" do
				%span.card-content Rand
			= link_to judge_problem_path(@problem), class: "btn btn-primary" do
				%span.card-content Go
			= link_to comment_problem_path(@problem), class: "btn btn-primary" do
				%span.card-content Say
			= link_to 'Prev', prev_problem_path, class: "btn btn-info"
			= link_to 'Next', next_problem_path, class: "btn btn-info"