<nav class="navbar navbar-inverse">
	<div class="col-sm-2 navbar-brand">
		<%= link_to t('scnuoj'), root_path, class: "navbar-link" %> 
	</div>
	<div class="col-sm-5">
		<%= render_list class: "nav navbar-nav" do |li|
			li << link_to(t('home'), home_path)
			li << link_to(t('problem'), problems_path)
			li << link_to(t('status'), statuses_path)
			li << link_to(t('rank'), ranks_path)
		end %>
	</div>
	<div class="col-sm-3">
		<ul class="nav navbar-nav">
			<% if current_user %>		
				<li><%= link_to current_user.username, "#" %></li>
				<li><%= link_to t('logout'), logout_path, method: "delete" %></li>
			<% else %>
				<li><%= link_to t('login'), login_path %></li>
			<% end %>
		</ul>	
	</div>
	<div class="col-sm-2">
		<%= form_tag theme_path, class: "navbar-form" do %>
		<%= select_tag "theme", options_for_select(%w(cerulean cosmo cyborg darkly flatly journal lumen paper readable sandstone simplex slate spacelab superhero united yeti), current_theme), class: "form-control", onchange: "submit()" %>
		<% end %>
	</div>
</nav>