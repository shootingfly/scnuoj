<%= form_for Code.new, class:"form-horizontal" do |f| %>
	<%= f.hidden_field :username, value: "1" %>
	<%= f.hidden_field :problem_id, value:"1001" %>
	<div class="form-group">
		<%= f.label :problem_id, "题目号：#{@problem.problem_id}" %>
		<%= f.label :language, "语言" %>
		<%= f.select :language, ["cplusplus", "c"] %>
	</div>
	<div class="form-group">
		<%= f.text_area :code, id:"editor", class:"form-control"%>
	</div>
	<div class="form-group">
		<%= f.submit value:"提交", class:"btn btn-block btn-success"%>
	</div>
<% end %>
<script type="text/javascript">
	$(document).ready(function(){
var myTextarea = document.getElementById('editor');
CodeMirror.fromTextArea(myTextarea,{
	value: "1+2",
	lineNumbers: true
});
</script>