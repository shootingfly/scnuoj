<h4><%= t('login') %></h4>
<%= form_tag(create_login_session_path, class: "form-horizontal") do |f| %>
	<div class="form-group">
		<label class="control-label col-sm-4">
			<i class="glyphicon glyphicon-user"></i>
		</label>
		<div class="col-sm-4">
			<%= text_field_tag 'student_id', nil, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-sm-4">
			<i class="glyphicon glyphicon-lock"></i>
		</label>
		<div class="col-sm-4">
			<%= password_field_tag 'password', nil, class: "form-control" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 col-sm-offset-4">
			<%= check_box_tag 'remember_me', nil, class: "btn btn-primary btn-block" %>
			<%= label_tag t('remember_me') %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4 col-sm-offset-4">
			<%= button_tag t('login'), class: "btn btn-primary btn-block" %>
		</div>
	</div>
<% end %>