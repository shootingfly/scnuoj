%h4.text-center Edit User
= form_for(@user, url: info_path, html: {class: "form-horizontal"}) do |f|
	.form-group
		= f.label :username, t('User'), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :username, class: "form-control"
	.form-group
		= f.label :dormitory, t('Dormitory'), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :dormitory, class: "form-control"
	.form-group
		= f.label :phone, t('Phone'), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :phone, class: "form-control"
	.form-group
		= f.label :qq, 'QQ', class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :qq, class: "form-control"
	.form-group
		= f.label :signature, t('Signature'), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_area :signature, class: "form-control"
	.form-group
		.col-sm-4.col-sm-offset-4
			= f.submit t('Submit'), class: "form-control btn btn-primary"