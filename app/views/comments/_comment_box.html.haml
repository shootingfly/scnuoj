= form_for(Comment.new(:user_id => current_user.id, :problem_id => problem.id), method: :post, class: "form-horizontal") do |f|
	= f.hidden_field :user_id
	= f.hidden_field :problem_id
	.form-group
		= f.text_area :content, class: "form-control", rows: 10, autofocus: true
	.form-group
		= f.submit 'Go', class: "btn btn-primary btn-block"
:javascript
	var commenters = [];
	$(function(){
		$('.media-body .text-muted a').each(function() {
			if($.inArray($(this).text(), commenters) < 0) {
				commenters.push($(this).text());			
			}
		});
		$('textarea').atwho({at:"@", 'data':commenters});
	});