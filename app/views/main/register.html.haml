%h4.text-center= t('Register')
= form_for(@user, url: register_path, html: {class: "form-horizontal"}) do |f|
	.form-group
		= f.label :student_id, t('StudentID'), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :student_id, class: "form-control", required: true, autofocus: true
	.form-group
		= f.label :username, t("User"), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :username, class: "form-control", required: true
	.form-group
		= f.label :classgrade, t("Class"), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :classgrade, class: "form-control", required: true
	.form-group
		= f.label :dormitory, t("Dormitory"), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :dormitory, class: "form-control", required: true
	.form-group
		= f.label :qq, "QQ", class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :qq, class: "form-control", required: true
	.form-group
		= f.label :phone, t("Phone"), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :phone, class: "form-control", required: true
	.form-group
		= f.label :signature, t("Signature"), class: "control-label col-sm-4"
		.col-sm-4
			= f.text_field :signature, class: "form-control"
	.form-group
		.col-sm-4.col-sm-offset-4
			= f.submit t('Register'), class: "form-control btn btn-primary"