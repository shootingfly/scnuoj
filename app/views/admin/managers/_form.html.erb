<div class="col-sm-5 col-sm-offset-3">
<%= simple_form_for([:admin,@manager],html:{class:'form-horizontal'}, wrapper: :horizontal_form) do |f| %>
  <%= f.input :username, label: "用户名"%>
  <%= f.input :password, as: :password, label: "密码"%>
  <%= f.input :role, collection: ["超级管理员", "学生管理员"], selected: "学生管理员", label: "角色" %>
  <%= f.input :remark, as: :text, label: "备注"%>
  <%= f.button :submit, value: "提交", class: "col-sm-9 col-sm-offset-3 btn-primary"%>
<% end %>
</div>

