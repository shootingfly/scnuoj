<h4>题目列表</h4>
<table class="table tabe-stripped table-bordered table-hover datatable">
  <thead>
    <tr>
      <th width="10%">题号</th>
      <th width="30%">标题</th>
      <th width="10%">AC</th>
      <th width="10%">Submit</th>
      <th width="20%">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.problem_id %></td>
        <td><%= problem.title %></td>
        <td><%= problem.ac %></td>
        <td><%= problem.submit %></td>
        <td>
          <%= link_to "查看", admin_problem_path(problem), class: "btn btn-xs btn-info" %>
          <%= link_to "编辑" , edit_admin_problem_path(problem), class: "btn btn-xs btn-warning" %>
          <%= link_to "删除", admin_problem_path(problem), method: :delete,  class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>