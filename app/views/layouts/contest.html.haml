!!!
%html
	%head
		%title= "#{@page_title} | #{@contest.title} of SCNUOJ"
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
		= stylesheet_link_tag  current_theme, media: 'all', 'data-turbolinks-track' => true
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= stylesheet_link_tag 'shared/common'
		= stylesheet_link_tag 'shared/rouge_theme'
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= javascript_include_tag 'shared/common'
		= javascript_include_tag "shared/datatable.en", "data-trubolinks-track" => true
		= yield :js
		= csrf_meta_tags
	%body
		= render "contests/navbar"
		#max.container
			= yield
		= render "contests/footer"
